views:
  - type: table
    name: Aliens by CR
    filters:
      and:
        - file.name != "Alien-Codex.base"
        - file.folder == "Compendium/SF1E/Bestiary/Alien-Codex"
    order:
      - cr
      - file.name
      - type
      - image
    sort:
      - property: cr
        direction: ASC
      - property: Type
        direction: ASC
      - property: subtype
        direction: ASC
      - property: file.name
        direction: DESC
    columnSize:
      file.name: 296
      note.Type: 358
    imageAspectRatio: 0.85
    imageFit: contain
